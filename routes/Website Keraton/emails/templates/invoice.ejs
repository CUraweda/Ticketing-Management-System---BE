<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <style>
        body {
            font-family: 'arial';
        }

        .container {
            display: flex;
            justify-content: between;
            align-items: center;
            background-color: rgb(221, 176, 30);
            width: 100%;
        }

        .max-w-screen-xl {
            max-width: 1280px;
        }

        .mx-auto {
            margin-left: auto;
            margin-right: auto;
        }

        .flex {
            width: 100%;
            display: flex;
        }

        .justify-between {
            justify-content: space-between;
        }

        .items-center {
            align-items: center;
        }

        .gap-2 {
            gap: 0.5rem;
        }

        .text-3xl {
            font-size: 1.875rem;
        }

        .font-bold {
            font-weight: 700;
        }

        .text-gray-800 {
            color: #2d3748;
        }

        .border-b {
            border-bottom-width: 1px;
            border-bottom-color: #e2e8f0;
        }

        .text-right {
            text-align: right;

        }

        .font-semibold {
            font-weight: 600;
        }

        .mb-8 {
            margin-bottom: 2rem;
        }

        .w-14 {
            width: 25%;
            justify-content: right;
            display: flex;
        }

        .w-34 {
            width: 75%;
        }

        .text-xl {
            font-size: 1.25rem;
        }

        .min-w-full {
            min-width: 100%;
        }

        .bg-white {
            background-color: #ffffff;
        }

        .py-2 {
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
        }



        .text-left {
            text-align: left;
        }

        .text-right {
            text-align: right;
        }

        .border-gray-800 {
            border-color: #2d3748;
        }

        .border-b {
            border-bottom-width: 1px;
        }

        .border-t {
            border-top-width: 1px;
        }
    </style>
</head>

<body>
    <div class="max-w-screen-xl mx-auto">
        <header class="container" style="padding: 20px;">
            <div class="flex">
                <!-- <img src="/public/assets/email/logo.svg" height="50pwidth="50px"> -->
                <h1 class="text-3xl font-bold text-gray-800">Invoice</h1>
            </div>
            <div class="text-right">
                <p class="text-gray-600" style="display: flex;">Invoice: <span class="font-semibold">
                        <%= nomor_invoice %>
                    </span></p>
                <p class="text-gray-600">Date: <span class="font-semibold">
                        <%= date %>
                    </span></p>
            </div>
        </header>
        <main style="padding: 20px; width: 100%; margin-top:50px;">
            <div class="flex gap-2">
                <section class="w-34">
                    <h2 class="text-xl font-semibold text-gray-800">Bill To:</h2>
                    <p class="text-gray-600">Name: <span class="font-semibold">
                            <%= name %>
                        </span></p>
                    <p class="text-gray-600">Email: <span class="font-semibold">
                            <%= email %>
                        </span>
                    </p>
                </section>
                <section class="w-14">
                    <!-- <img src="/public/assets/email/testqr.jpg" width="50%"> -->
                </section>
            </div>
            <section>
                <table class="min-w-full bg-white" style="margin-top: 50px;">
                    <thead>
                        <tr>
                            <th class="py-2 px-4 border-b text-left text-gray-800">Description</th>
                            <th class="py-2 px-4 border-b text-right text-gray-800">Quantity</th>
                            <th class="py-2 px-4 border-b text-right text-gray-800">Price</th>
                            <th class="py-2 px-4 border-b text-right text-gray-800">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0 ; i < invoices.length; i++) { %>
                            <tr>
                                <td class="py-2 px-4 border-b text-gray-600">
                                    <%= invoices[i].item_desc %>
                                </td>
                                <td class="py-2 px-4 border-b text-right text-gray-600">
                                    <%= invoices[i].quantity %>
                                </td>
                                <td class="py-2 px-4 border-b text-right text-gray-600">
                                    <%= invoices[i].price %>
                                </td>
                                <td class="py-2 px-4 border-b text-right text-gray-600">
                                    <%= invoices[i].total %>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </section>
        </main>
        <footer class="border-t" style="padding: 20px; width: 100%;">
            <div class="text-right">
                <p class="text-gray-600">Subtotal: <span class="font-semibold">
                        <%= subtotal %>
                    </span></p>
                <p class="text-gray-600">Tax: <span class="font-semibold">
                        <%= tax %>
                    </span></p>
                <p class="text-gray-600">Total: <span class="font-semibold">
                        <%= total %>
                    </span></p>
            </div>
        </footer>
    </div>
</body>

</html>