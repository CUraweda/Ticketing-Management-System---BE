<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <style>
      body {
        font-family: Arial, sans-serif;
      }
      .bold {
        font-weight: 600;
      }
      h6,
      p {
        padding: 0;
        margin: 0;
      }
      
      h1,
      h3 {
        font-family: "Times New Roman", Times, serif;
      }
      h1 {
        color: #dfb032;
      }
      
      .invoice {
        width: 100%;
        border: 1px solid #000;
        margin: 2rem 0;
      }
      .invoice-logo {
        width: 150px;
      }
      
      .invoice-header {
        display: flex;
        gap: 1rem;
        background-color: #eed184;
        padding: 1rem;
      }
      
      .invoice h6 {
        font-weight: 600;
      }
      
      .invoice-header_content {
        width: 100%;
        gap: 1rem;
        background-color: #eed184;
        padding: 1rem;
      }
      .invoice-header_content h6:nth-child(3) {
        margin-top: 1rem;
      }
      .invoice-header_content p {
        margin-left: 1rem;
      }
      .invoice-header_time {
        min-width: 10rem;
        padding-top: 1rem;
      }
      
      .invoice-main {
        padding: 1rem;
      }
      
      .invoice-ticket {
        display: flex;
        align-items: center;
        margin-left: 1rem;
        margin-top: 1rem;
      }
      .invoice-ticket_main {
        width: 100%;
      }
      
      .invoice-ticket_total {
        min-width: 6rem;
      }      
    </style>
  </head>

  <body>
    <section class="invoice">
      <div class="invoice-header">
        <img src="<%= logoKKC %>" alt="logo" class="invoice-logo" />
        <div class="invoice-header_content">
          <h6>Kasir</h6>
          <p><%= cashier.name %> (<%= cashier.email %>)</p>
          <h6>Nama Pelanggan</h6>
          <p><%= customer.name %> (<%= customer.name %>)</p>
          <% if (!customer.number) { %> <% } else { %>
          <p><%= customer.number %></p>
          <% } %>
        </div>
        <div class="invoice-header_time">
          <h6>Jadwal Reservasi</h6>
          <p><%= reserveDate %> | <%= reserveTime %></p>
        </div>
      </div>
      <div class="invoice-main">
        <h6 class="bold">Reservasi</h6>
        <% tickets.forEach((ticket, i) => { %>
        <div class="invoice-ticket">
          <div class="invoice-ticket_main">
            <p><%= ticket.order && ticket.order.name %></p>
            <p>
              Rp. <%= ticket.order && ticket.order.price %>
              <span> x <%= ticket.amount %> Tiket</span>
            </p>
            <% if (ticket.guide) { %>
            <p>Guide : <span><%= ticket.guide.name %></span></p>
            <% } %>
          </div>
          <div class="invoice-ticket_total">
            <p>
              Rp. <%= (ticket.order && ticket.order.price) * ticket.amount %>
            </p>
          </div>
        </div>
        <% }) %>
      </div>
    </section>
  </body>
</html>
