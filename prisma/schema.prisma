// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  CASHIER
  CUSTOMER
}

enum Gender {
  MALE
  FEMALE
}

enum Status {
  SUDAH_DIGUNAKAN
  DAPAT_DIGUNAKAN
  EXPIRED
  MENUNGGU_PEMBAYARAN
}

enum Action {
  CREATE
  UPDATE
  DELETE
}

model Guide {
  id          String        @id @default(uuid())
  disabled    Boolean       @default(false)
  name        String
  email       String        @unique
  gender      Gender
  birthdate   DateTime      @db.Date
  image       String?
  desc        String?
  detailTrans DetailTrans[]
}

model User {
  id            String        @id @default(uuid())
  name          String
  email         String        @unique
  number        String?
  password      String
  role          Role
  nationality   Nationality?  @relation(fields: [nationalityId], references: [id])
  nationalityId String?
  carts         Json?         @default("{}")
  transaction   Transaction[]
  logs          Logs[]
  token         Token[]
}

model Token {
  id     String @id @default(uuid())
  token  String @db.Text
  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model Order {
  id             String        @id @default(uuid())
  disabled       Boolean       @default(false)
  image          String?
  name           String
  desc           String?
  price          Float
  units          String        @default("orang")
  createdDate    DateTime      @default(now())
  posOnly        Boolean       @default(false)
  wisataRelation String?
  wisataDesc     String?       @db.Text
  detailTrans    DetailTrans[]
  category       Category      @relation(fields: [categoryId], references: [id])
  categoryId     Int
  orderSubType   OrderSubType  @relation(fields: [orderSubTypeId], references: [id])
  orderSubTypeId Int
  deleted        Boolean       @default(false)
}

model Category {
  id       Int     @id @default(autoincrement())
  disabled Boolean @default(false)
  name     String  @unique
  color    String
  order    Order[]
}

model OrderType {
  id           Int            @id @default(autoincrement())
  disabled     Boolean        @default(false)
  name         String         @unique
  orderSubType OrderSubType[]
}

model OrderSubType {
  id           Int       @id @default(autoincrement())
  disabled     Boolean   @default(false)
  name         String    @unique
  minimumUnits Int?
  orderType    OrderType @relation(fields: [orderTypeId], references: [id])
  orderTypeId  Int
  orders       Order[]
}

model Transaction {
  id            String         @id @default(uuid())
  customer      Json?
  additionalFee Int
  total         Decimal        @db.Decimal(18, 2)
  method        String
  status        Status         @default(MENUNGGU_PEMBAYARAN)
  plannedDate   DateTime
  createdDate   DateTime       @default(now())
  discount      String?
  cashback      String?
  user          User?          @relation(fields: [userId], references: [id])
  userId        String?
  nationality   Nationality?   @relation(fields: [nationalityId], references: [id])
  nationalityId String?
  detailTrans   DetailTrans[]
  BarcodeUsage  BarcodeUsage[]
}

model DetailTrans {
  id            String      @id @default(uuid())
  amount        Int
  createdDate   DateTime    @default(now())
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId String
  order         Order?      @relation(fields: [orderId], references: [id])
  orderId       String?
  event         Events?     @relation(fields: [eventId], references: [id])
  eventId       Int?
  guide         Guide?      @relation(fields: [guideId], references: [id])
  guideId       String?
}

model Logs {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  action      Action
  activity    String
  changedAt   String
  status      String
  createdDate DateTime @default(now())
}

model BarcodeUsage {
  id            String      @id @default(uuid())
  qrPath        String
  remainingUses Int
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId String
  expiredAt     DateTime
  createdAt     DateTime    @default(now())
}

model Nationality {
  id          String        @id @default(uuid())
  name        String
  code        String
  users       User[]
  transaction Transaction[]
}

model Contents {
  id           Int      @id @default(autoincrement())
  page         Pages    @relation(fields: [pageId], references: [id])
  pageId       Int
  sectionName  String   @db.Text
  sectionOrder Int
  context      Json
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())
}

model Pages {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  updatedAt DateTime   @updatedAt
  createdAt DateTime   @default(now())
  contents  Contents[]
}

model Events {
  id          Int            @id @default(autoincrement())
  iteration   EventIteration @relation(fields: [iterationId], references: [id])
  iterationId Int
  isFree      Boolean
  price       Float          @default(0)
  name        String
  desc        String         @db.Text
  image       String
  deleted     Boolean        @default(false)
  detailTrans DetailTrans[]
}

model EventIteration {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  events Events[]
}

model News {
  id        Int      @id @default(autoincrement())
  title     String
  desc      String   @db.Text
  image     String
  link      String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Subscriber {
  id            Int     @id @default(autoincrement())
  email         String
  stillSubcribe Boolean @default(true)
}

model GlobalParam {
  id         Int      @id @default(autoincrement())
  identifier String
  data       Json
  updatedAt  DateTime @updatedAt
}

model ObjekWisata {
  id              Int    @id @default(autoincrement())
  label           String
  to              String
  orderIdentifier String
}
